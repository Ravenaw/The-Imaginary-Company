<Page
    x:Class="The_Imaginary_Company.Add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_Imaginary_Company"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Text="Add Item" FontSize="72"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Grid Padding="0,0,5,0">
                    <StackPanel Spacing="20">
                        <Grid Height ="35">
                            <TextBlock Text="TIC No." VerticalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Height ="35">
                            <TextBlock Text="IAN No." VerticalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Height ="35">
                            <TextBlock Text="Owner" VerticalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Height ="35">
                            <TextBlock Text="Name" VerticalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Height ="35">
                            <TextBlock Text="Weight" VerticalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Height ="35">
                            <TextBlock Text="Quantity" VerticalAlignment="Center"></TextBlock>
                        </Grid>
                        <Grid Height ="35">
                            <TextBlock Text="Location" VerticalAlignment="Center"></TextBlock>
                        </Grid>
                    </StackPanel>
                </Grid>
                <Grid>
                    <StackPanel Width="200" Spacing="20">
                        <TextBox Height ="35"></TextBox>
                        <TextBox Height ="35"></TextBox>
                        <TextBox Height ="35"></TextBox>
                        <TextBox Height ="35"></TextBox>
                        <TextBox Height ="35"></TextBox>
                        <TextBox Height ="35"></TextBox>
                        <TextBox Height ="35"></TextBox>
                        <Button Content="Add" HorizontalAlignment="Right" Width="50"></Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
